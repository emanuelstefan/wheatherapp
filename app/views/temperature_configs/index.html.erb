<h1>Temperature configs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Min</th>
    <th>Max</th>
    <th>Actions</th>
  </tr>
 
  <% @configs.each do |config| %>
    <tr>
      <td><%= config.key %></td>
      <td><%= config.min %></td>
      <td><%= config.max %></td>
      <td><%= link_to "Destroy", temperature_config_path(config.id),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></td>
      <td><%= link_to "Edit", edit_temperature_config_path(config.id) %></td>

    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Back', root_path %> | <%= link_to 'Add config', new_temperature_config_path %>